- model_class = User
- content_for :title do
  %h1= t '.title', :default => model_class.model_name.human

%dl.row
  - if user.photo.present?
    %dt.col-sm-3= model_class.human_attribute_name :photo
    %dd.col-sm-9= image_tag user.photo_url, class:"img-thumbnail d-block mb-2"
  %dt.col-sm-3= model_class.human_attribute_name :name
  %dd.col-sm-9= user.full_name
  %dt.col-sm-3= model_class.human_attribute_name :email
  %dd.col-sm-9= user.email
  %dt.col-sm-3= model_class.human_attribute_name :role
  %dd.col-sm-9= user.translated_role

- if policy(user).index?
  = link_to admin_users_path, class: "btn btn-outline-secondary mx-1" do
    %i.fa-solid.fa-chevron-left
    = t('.back', :default => t("helpers.links.back"))

- if policy(user).edit?
  = link_to edit_admin_user_path(user), class: "btn btn-primary mx-1" do
    %i.fa-solid.fa-edit
    = t('.edit', :default => t("helpers.links.edit"))

- if policy(user).destroy?
  = render "admin/shared/discard", record: user, path: admin_user_path(user), info: user.full_name, small: false