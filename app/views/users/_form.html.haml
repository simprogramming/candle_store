= simple_form_for [:admin, @user], url: admin_user_path(@user), data: { turbo: false } do |f|
  .row
    .col-md-6
      = f.input :first_name, input_html: { autocomplete: "off" }
    .col-md-6
      = f.input :last_name, input_html: { autocomplete: "off" }
    .col-md-6
      = f.input :role, collection: User.translated_roles_sorted, input_html: { autocomplete: "off" }
    .col-md-6
      = f.input :email, input_html: { autocomplete: "off" }
    .col-md-6
      = f.input :password, input_html: { autocomplete: "off" }
    .col-md-6
      = f.input :password_confirmation, input_html: { autocomplete: "off" }
    .col-md-6
      = f.input :photo do
        - if @user.photo.present?
          = image_tag @user.photo_url, class:"img-thumbnail d-block mb-2"

        = f.input :photo, as: :hidden, input_html: { value: @user.cached_photo_data }, wrapper: false, error: false
        = f.input :photo, as: :file, label: false

  = f.submit t("helpers.submit.submit", default: "Submit"), class: "btn btn-primary"
  = link_to t('.cancel', default: t("helpers.links.cancel")), admin_users_path, class: "btn btn-outline-secondary"
